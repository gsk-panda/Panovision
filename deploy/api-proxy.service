[Unit]
Description=PanoVision API Proxy Service
After=network.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/opt/panovision
ExecStart=/usr/bin/node /opt/panovision/deploy/api-proxy.js
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target

